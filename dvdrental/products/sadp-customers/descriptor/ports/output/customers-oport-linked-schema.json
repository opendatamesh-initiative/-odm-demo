{
  "$id": "http://opendatamesh.org/dp_customers.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "@context": "http://schema.org",  
  "title": "Customer",
  "type": "object",
  "properties": {
    "id": {
      "@type": "Person/identifier",  
      "type": "string",
      "description": "The customer's identifier."
    },
    "firstName": {
      "@type": "Person/givenName", 
      "type": "string",
      "description": "The customer's first name."
    },
    "lastName": {
      "@type": "Person/familyName", 
      "type": "string",
      "description": "The customer's last name."
    },
    "phone": {
      "@type": "ContactPoint/telephone", 
      "type": "string",
      "description": "The customer's primary phone number."
    },
    "address": {
      "@type": "PostalAddress/streetAddress", 
      "type": "string",
      "description": "The customer's residential address."
    },
    "zip_code": {
      "@type": "PostalAddress/postalCode", 
      "type": "string",
      "description": "The customer's residential postal code."
    },
    "city": {
      "@type": "PostalAddress/addressLocality",  
      "type": "string",
      "description": "The customer's residential city."
    },
    "country": {
      "@type": "PostalAddress/addressCountry",  
      "type": "string",
      "description": "The customer's residential country."
    },
    "notes": {
      "@type": "Person/description",  
      "type": "string",
      "description": "The customer's state. It is equal to 'active' if the customer did at least one rental in the past 6 months."
    },
    "sid": {
      "@type": "Organization/identifier",  
      "type": "string",
      "description": "The customer's preferred store's identifier."
    }
  }
}
